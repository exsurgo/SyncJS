
<div data-update="content" data-title="Templates">
    
    <h3>Basic Example</h3>
    <pre class="brush: xml;">
        <div data-template="todo-list">
            Count: <%= this.length %>
            <ul>
                <%= Sync.renderAll("todo-row", this) %>
            </ul>
        </div>

        <li data-template="todo-row">
            <%= this.Title %> - <%= this.Priority %>
        </li>
    </pre>
    <br/>
    <pre class="brush: js;">
        //Data
        var data = [
            { TodoID: 1, Title: "Todo 1", Priority: "High" },
            { TodoID: 2, Title: "Todo 2", Priority: "Normal" },
            { TodoID: 3, Title: "Todo 2", Priority: "Low" }
        ];
    
        //Render template
        var output = Sync.render("todo-list", data);
    
        //Output html
        $("#template-output").html(output);  
    </pre>
    <br/>
    <p id="template-output" class="before-update-style">
        Template will be rendered here
    </p>
    <a href="/Templates/Basic">View Todo List</a>

    <hr class="line"/>

    <h3>Remote Data</h3>
    <p id="remote-data-div" class="before-update-style">
        Template will be rendered here
    </p>
    <a href="/Todos">View Todo List</a>

</div>
